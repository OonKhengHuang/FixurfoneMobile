<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:onClick="@{() -> clickListener.onClick(reserve)}" >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/restaurantIcon"
                android:layout_marginStart="20dp"
                style="@style/margin10px"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:orientation="horizontal"
                app:shapeAppearanceOverlay="@style/roundedImage"
                tools:src="@drawable/ic_baseline_person_24" />

            <TextView
                android:id="@+id/restaurantName"
                style="@style/transactionItemfont"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/restaurantIcon"
                tools:text="Tealive Gurney Plaza" />


            <TextView
                android:id="@+id/totalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/restaurantName"
                android:layout_toRightOf="@id/restaurantIcon"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                tools:text="Total Price: RM36.00" />

            <TextView
                android:id="@+id/orderDate"
                style="@style/transactionItemfont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/totalAmount"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/restaurantIcon"
                android:text="10.20 a.m."
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/orderDate"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@color/black" />
        </RelativeLayout>

    </FrameLayout>



</layout>